<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_300"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nprclient.MainActivity" >

    <ImageView
        android:id="@+id/nprLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/npr_logo" />

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nprLogo"
        android:orientation="vertical"
        android:weightSum="2" >

        <Button
            android:id="@+id/btnPrograms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/md_grey_800"
            android:text="Programs"
            android:textColor="@color/md_white_1000" />

        <Button
            android:id="@+id/btnTopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nprLogo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/md_grey_800"
            android:text="  Topics  "
            android:textColor="@color/md_white_1000" >
        </Button>

        <Button
            android:id="@+id/btnFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btnPrograms"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/md_grey_800"
            android:text=" Favorites "
            android:textColor="@color/md_white_1000" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnTopics"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/md_grey_800"
            android:text="     Exit     "
            android:textColor="@color/md_white_1000" >
        </Button>
    </LinearLayout>

</RelativeLayout>